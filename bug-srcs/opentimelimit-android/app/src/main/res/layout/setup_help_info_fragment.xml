<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:gravity="center_horizontal"
                android:textAppearance="?android:textAppearanceLarge"
                android:text="@string/setup_help_look_for_this_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_margin="16dp"
                android:src="@drawable/ic_info_outline_black_24dp"
                android:layout_width="match_parent"
                android:layout_height="64dp" />

            <TextView
                android:layout_marginBottom="8dp"
                android:gravity="center_horizontal"
                android:textAppearance="?android:textAppearanceMedium"
                android:text="@string/setup_help_there_is_help_like_at_example"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <include android:id="@+id/user_key_view"
                layout="@layout/manage_user_key_view" />

            <TextView
                android:layout_marginTop="8dp"
                android:autoLink="web"
                android:id="@+id/text_with_links"
                android:text="@string/setup_help_info_about_support_and_documentation"
                android:textAppearance="?android:textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:layout_marginTop="8dp"
                android:id="@+id/next_button"
                android:text="@string/wiazrd_next"
                android:layout_gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>
</layout>