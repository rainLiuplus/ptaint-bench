<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="materialButtonOutlinedStyle">@style/AppButtonOutline</item>
        <item name="radioButtonStyle">@style/RadioButtonTheme</item>
        <item name="checkboxStyle">@style/CheckboxTheme</item>

        <item name="bottomSheetDialogTheme">@style/BottomSheetDialog</item>
    </style>

    <style name="AppThemeDarkOverlay" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="colorAccent">@color/white</item>
    </style>

    <!-- from https://stackoverflow.com/a/46286184 -->
    <style name="BottomSheetDialog" parent="Theme.MaterialComponents.DayNight.BottomSheetDialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="materialButtonOutlinedStyle">@style/AppButtonOutline</item>
        <item name="radioButtonStyle">@style/RadioButtonTheme</item>
        <item name="checkboxStyle">@style/CheckboxTheme</item>

        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="behavior_peekHeight">512dp</item>
    </style>

    <style name="FullscreenDialogTheme" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="materialButtonOutlinedStyle">@style/AppButtonOutline</item>
        <item name="radioButtonStyle">@style/RadioButtonTheme</item>
        <item name="checkboxStyle">@style/CheckboxTheme</item>

        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">?colorSurface</item>
    </style>

    <style name="AppHomescreenTheme" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppButtonOutline" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/button_outline_color</item>
        <item name="backgroundTint">@color/outlined_button_background_tint</item>
    </style>

    <style name="DangerButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/danger_button</item>
    </style>

    <style name="RadioButtonTheme" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="CheckboxTheme" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="android:minHeight">0dp</item>
    </style>
</resources>
